<%- include("../partials/header") %>
  <%- include("../partials/navbar") %>

    <main class="container">
      <%- include("../partials/flash") %>
          <h1 class="display-5 mb-3">My Scrap</h1>
          <div class="row">
            <div class="col-lg-6">
                <% for(let item of user.cart){ %>
                    <div class="card mx-auto mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                          <div class="col-md-4">
                            <img src="<%=item.image%> " class="img-fluid rounded-start" style="height: 160px;">
                          </div>
                          <div class="col-md-8">
                            <div class="card-body">
                              <h5 class="card-title"><%= item.name %> </h5>
                              <h5 class="card-title">Weight: <%= item.weight %> </h5>
                              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                              <form action="/cart/<%=item._id%>/remove?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                <% } %>  
            </div>
            <div class="col-lg-4 mx-auto">
                <h1 class="display-6">Items</h1>
                <ul class="list-group">
                    <% for(let item of user.cart){ %>
                        <li class="list-group-item">
                           <span class="fw-bold"><%= item.name %></span> : <span><%= item.weight %> Kgs</span>
                        </li> 
                    <% } %>
                </ul>
            </div>
          </div>
    </main>

    <%- include("../partials/footer") %>