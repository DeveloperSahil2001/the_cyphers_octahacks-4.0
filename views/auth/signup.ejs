<%- include("../partials/header") %>
    <%- include("../partials/navbar") %>

        <main class="container">
            <div class="row">
                <div class="col-md-6 mx-auto" id="log">
                    <%- include("../partials/flash") %>
                        <h1 class="display-6" style="text-align: center;font-weight: 400;">Sign Up</h1>
                        <form action="/register" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                    placeholder="Username" />
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="email" />
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="password" />
                            </div>
                            <button type="submit" class="btn btn-success btn-sm" style="margin-left:30%;width: 40%;">Sign Up</button>
                        </form>
                        <div class="mt-3" style="text-align: center">
                            <a href="/login" style="text-decoration: none">
                                Already registered? Sign in</a>
                        </div>
                        <div class="mt-3" style="text-align: center; padding-bottom: 0%">
                            <p style="opacity: 0.6">Copyright &copy; Your Website 2021.</p>
                        </div>
                </div>
            </div>
        </main>

        <%- include("../partials/footer") %>